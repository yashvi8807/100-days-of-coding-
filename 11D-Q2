// Q22: Write a program to find profit or loss percentage given cost price and selling price.
#include<stdio.h>
int main()
{
    int cp,sp,Profit ,Loss;
    printf("Enter cost price & selling price");
    scanf("%d %d",&cp,&sp);
    if(sp>cp){
    Profit=((sp-cp)*100)/cp;
    printf("Profit %d%%",Profit);}
    else if(cp>sp){
    Loss=((cp-sp)*100)/cp;
    printf("Loss %d%%",Loss);
    }
    else{
        printf("No Profit No Loss");
    }
    return 0;
}
