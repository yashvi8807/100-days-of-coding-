// Q29: Write a program to calculate the factorial of a number.
#include<stdio.h>
int main()
{
    int n;
    long long fact=1;
    printf("Enter number.");
    scanf("%d",&n);
    if (n<0){
        printf("Factorial can't be found\n");
    }
    else{
        for(int i = 1;i <= n;i++){
            fact = fact * i;
    }
    printf("Factorial is %ld\n",fact);
    }
    return 0;
}
