// Q4: Write a program to calculate the area and circumference of a circle given its radius.
#include<stdio.h>
int main()
{
    int r;
    printf("Enter radius of circle");
    scanf("%d",&r);
    float A,C;
    A=3.14*r*r;
    printf("Area of circle is %f",A);
    C=2*3.14*r;
    printf("Circumference is %f",C);
    return 0;
}

