// Q11: Write a program to input an integer and check whether it is even or odd using ifâ€“else.
#include<stdio.h>
int main()
{
    int number;
    printf("Enter number");
    scanf("%d",&number);
    if (number % 2 == 0) {
        printf("%d is even",number);
    }
    else {
        printf("%d is odd",number);
    }
    return 0;
}
 
